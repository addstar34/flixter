<div class="booyah-box col-md-8 col-md-offset-2">
	<h1 class="text-center"><%= current_course.title %></h1>
	<%= image_tag current_course.image, :class => 'img-responsive' %>
	<p><%= current_course.description %><p>
	<h5>$<%= current_course.cost %><h5>
	<br />
	<div class="text-center">
		<%= link_to 'Add new section', new_instructor_course_section_path(current_course), :class => 'btn btn-primary btn-lg' %>
	</div>
	<div>
		<%= link_to 'Student Preview', course_path(current_course), :class => 'btn btn-warning pull-right' %>
	</div>
	
	<ul>
		<% current_course.sections.each do |section| %>
			<li>
				<%= section.title %>
				<%= link_to 'Create lesson', new_instructor_section_lesson_path(section), :class => 'btn btn-primary btn-xs' %>
				<ul>
					<% section.lessons.rank(:row_order).each do |lesson| %>
						<li>
							<%= lesson.title %>
							 - 
							<%= lesson.subtitle %>
						</li>
					<% end %>
				</ul>
			</li>
		<% end %>
	</ul>

	</div>
</div>