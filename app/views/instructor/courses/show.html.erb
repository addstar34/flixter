<div class="booyah-box col-md-8 col-md-offset-2">
	<h1 class="text-center"><%= @course.title %></h1>
	<p><%= @course.description %><p>
	<h5>$<%= @course.cost %><h5>
	<br />
	<div class="text-center">
		<%= link_to 'Add new section', new_instructor_course_section_path(@course), :class => 'btn btn-primary btn-lg' %>
	</div>
	<div>
		<%= link_to 'Student Preview', course_path(@course), :class => 'btn btn-warning pull-right' %>
	</div>
	
	<ul>
		<% @course.sections.each do |section| %>
			<li>
				<%= section.title %>
			</li>
		<% end %>
	</ul>

	</div>
</div>