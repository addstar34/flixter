<div class="col-xs-12 col-md-10 col-md-offset-1">
	<br />
	<h1>What I'm Learning</h1>
	<hr>
</div>

<% current_user.enrolled_courses.each do |course| %>
	<div class="booyah-box col-xs-12 col-md-8 col-md-offset-2">
		<h3 class="text-center">
			<%= link_to course.title, course_path(course) %>
		</h3>
		<br />
		<%= image_tag course.image, :class => 'img-responsive' %>
		<br />
		<div class="col-xs-12 col-sm-8">
			<p>
				<%= course.description %>
			</p>
		</div>
		<div class="col-xs-12 col-sm-4">
			<b>by: </b><%= course.user.email %>
			<br class="clr" />
			<b>cost: </b><span class="label label-info">
    		<%= number_to_currency course.cost %>
  		</span>
  		<br />
  		<span class="label label-info">You are Enrolled!</span>
  		<br class="clr" />
  		<br />
			<%= link_to "Go to course", course_path(course), :class => 'btn btn-primary' %>
		</div>
	</div>
<% end %>

